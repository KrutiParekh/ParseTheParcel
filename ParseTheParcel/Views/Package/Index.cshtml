@model ParseTheParcel.Models.Package

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Parse The Parcel</h1>
    <p class="lead">Find out how much will it cost to deliver your parcel using our services.</p>
</div>


<h2>Calculate Cost of Delivery</h2>
@using (Ajax.BeginForm("Result", "Package",
                            new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "divCostDetails" }))
{
    @Html.AntiForgeryToken()

    <div id="divCostDetails"></div>

    <form>
        
            @Html.Partial("_PackageLength")

            @Html.Partial("_PackageBreath")

            @Html.Partial("_PackageHeight")

            @Html.Partial("_PackageWeight")

            @*<p>
                <input type="submit" value="Calculate" />
            </p>*@
        <button type="submit" class="btn btn-default">Calculate</button>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




